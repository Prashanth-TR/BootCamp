<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.Bootcamp.TwitterBasic.models.StatusPojo" table="twitter_data">
        <id name="message" type="String" column="message">
            <generator class="assigned"></generator>
        </id>
        <property name="name" column="name"/>
        <property name="handle" column="handle"/>
        <property name="profileImageUrl" column="profile_image_url"/>
        <property name="createdAt" column="created_at"/>
        <property name="tweetUrl" column="tweet_url"/>
    </class>
</hibernate-mapping>